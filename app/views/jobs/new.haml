= render "layouts/header"
#wrapper.container_24
  #jobcontainer.grid_17

    .title
      %h1 Post Your Job
    .solidline.grid_16
      .subheader
        %h4
          %r Step 1: 
          Job Option
      #joboption
        #joboptionheader
          #singlejob
            Single Job
          #jobpackage
            5 Job Package 
          .clearfix
        #pricesingle
          £109
        #price5
          £99 
        .clearfix  
        #perjob
          per job
        #perjobleft
          per job 
        .clearfix  
        #total
          Total price £496
        #input
          %input{:name => "1job", :type => "checkbox", :value => "1job"} Select
        #inputleft
          %input{:name => "1job", :type => "checkbox", :value => "1job"} Select  
 
      .subheader
        %h4
          %r Step 2:
          Job Details
          #jobdetails
            #jobdetailsheader
              #jobdetailstext
                Job Details
            =semantic_form_for @job do |f|


              =f.inputs do

                =f.input :title ,:label => "Job Title"
                =f.input :location
                =f.input :position_type, as: :select, collection: ["Full-Time", "Contract", "Freelance"]
                =f.input :description ,:label => "Job Description"
                =f.input :info ,:label => "How to Apply"
    
                -unless current_employer 
                  .subheader
                  %h4
                    %r Step 3:
                    Company Information
                    #companyinfoheader
                      #jobdetailstext
                        Company Information
                  =f.semantic_fields_for :employer do |e| 
                    =e.input :email
                    =e.input :password
                    =e.input :password_confirmation
                    =e.input :name
                    =e.input :city
                    =e.input :company_name
                    =e.input :website
                    =e.input :logo, as: :file
                    
                #jobcreatebutton      
                  =f.action :submit, :as => :button     
  #sidebar.grid_7
    .sidebarheader
      %h3 100% Satisfaction Guarantee
    .sidebarline
  .sidebar_content.grid_7
    %p
      Post your job on HotSeats.co and if you're
      not completely satisfied with the results
      you receive simply contact us for a full
      and courteous refund
    .sidebarheader
      %h3 "My CV was one of the best CVs the company had ever seen."
      .sidebarline
  
  .redlink.grid_7
    %p
    Receive a full report on your CV's strengths and weaknesses #{link_to 'CLICK HERE', "http://www.careerconsultants.co.uk/find-me-a-job/cv-assessment/" }  
  .sidebar_content.grid_7
    %h3 Post a Job
    .sidebarline
    .sidebar_content
      %p Post a job with HotSeats.co today for guaranteed recruitment satisfaction.
    .redbutton_sidebar
      .buttontext= link_to 'Post Job', new_jobs_path
  .clear   

  = render "layouts/footer"   
      
      