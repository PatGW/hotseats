= render "layouts/header"
#wrapper.container_24
  #jobcontainer.grid_24
    #make_payment_title
      %h3
        Make Payment for #{@job.title} Job listing
    #one_job_payment
      %h4
        1 Job Listing
      .paypalbutton
        %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post", :target => "_top"}
          %input{:name => "cmd", :type => "hidden", :value => "_xclick"}/
          %input{:name => "business", :type => "hidden", :value => "FF6Q6HD44S4R6"}/
          %input{:name => "lc", :type => "hidden", :value => "GB"}/
          %input{:name => "item_name", :type => "hidden", :value => "HotSeats Job Listing"}/
          %input{:name => "item_number", :type => "hidden", :value => @job.id}/
          %input{:name => "amount", :type => "hidden", :value => "109.00"}/
          %input{:name => "currency_code", :type => "hidden", :value => "GBP"}/
          %input{:name => "button_subtype", :type => "hidden", :value => "services"}/
          %input{:name => "no_note", :type => "hidden", :value => "1"}/
          %input{:name => "no_shipping", :type => "hidden", :value => "1"}/
          %input{:name => "custom", :type => "hidden", :value => "1job"}/
          %input{:name => "notify_url", :type => "hidden", :value => pn_url}/
          %input{:name => "bn", :type => "hidden", :value => "PP-BuyNowBF:btn_buynow_LG.gif:NonHosted"}/
          %input{:alt => "PayPal – The safer, easier way to pay online.", :border => "0", :name => "submit", :src => "https://www.paypal.com/en_GB/i/btn/btn_buynow_LG.gif", :type => "image"}/
          %img{:alt => "", :border => "0", :height => "1", :src => "https://www.paypal.com/en_GB/i/scr/pixel.gif", :width => "1"}/
    /
      "https://www.sandbox.paypal.com/cgi-bin/webscr?" + values.to_query
    #five_job_payment
      %h3 5 Job Listings
      .paypalbutton2
        %form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post", :target => "_top"}
          %input{:name => "cmd", :type => "hidden", :value => "_xclick"}/
          %input{:name => "business", :type => "hidden", :value => "FF6Q6HD44S4R6"}/
          %input{:name => "lc", :type => "hidden", :value => "GB"}/
          %input{:name => "item_name", :type => "hidden", :value => "Five HotSeats Job Listings"}/
          %input{:name => "item_number", :type => "hidden", :value => @job.id}/
          %input{:name => "amount", :type => "hidden", :value => "496.00"}/
          %input{:name => "currency_code", :type => "hidden", :value => "GBP"}/
          %input{:name => "button_subtype", :type => "hidden", :value => "services"}/
          %input{:name => "no_note", :type => "hidden", :value => "1"}/
          %input{:name => "no_shipping", :type => "hidden", :value => "1"}/
          %input{:name => "custom", :type => "hidden", :value => "5job"}/
          %input{:name => "notify_url", :type => "hidden", :value => pn_url}/
          %input{:name => "bn", :type => "hidden", :value => "PP-BuyNowBF:btn_buynow_LG.gif:NonHosted"}/
          %input{:alt => "PayPal – The safer, easier way to pay online.", :border => "0", :name => "submit", :src => "https://www.paypal.com/en_GB/i/btn/btn_buynow_LG.gif", :type => "image"}/
          %img{:alt => "", :border => "0", :height => "1", :src => "https://www.paypal.com/en_GB/i/scr/pixel.gif", :width => "1"}/
    - if current_employer
      #prepaid
        %h5
          Your prepaid Job Balance is:
          \#{current_employer.prepaid}
          - if current_employer.prepaid > 0
            = link_to 'Pay with prepaid Balance', prepaid_path(@job.id)
= render "layouts/footer"